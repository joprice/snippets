#!/usr/bin/env bash 

set -o vi

export HISTCONTROL=ignoredups:erasedups
shopt -s histappend

export PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND$'\n'}"
#history -a; history -c; history -r"

export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin"

export PATH="$PATH:$HOME/bin"

[[ -a "~/.aliases" ]] && source ~/.aliases

alias ls='ls -G'
alias l="ls"

export SBT_OPTS="-Xms512m -Xmx2048m -XX:ReservedCodeCacheSize=256m -XX:MaxMetaspaceSize=512m"

# assumes bash-completion is installed `brew install git bash-completion`
if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

export LESS=-RFX

ulimit -n 8192

export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=$HOME/.boot2docker/certs/boot2docker-vm
export DOCKER_TLS_VERIFY=1

export ANDROID_HOME=/usr/local/opt/android-sdk
export PATH=${PATH}:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools

# run before chrome dev
#export PATH=$PATH:$HOME/dev/depot_tools

if which git-radar > /dev/null; then 
  export PS1="\W/\$(git-radar --bash --fetch) => "
fi

export PATH="$HOME/Library/Python/2.7/bin:$PATH"

if which jenv > /dev/null; then 
  eval "$(jenv init -)"; 
fi

